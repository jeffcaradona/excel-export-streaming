{
  "name": "excel-export-streaming",
  "author": "Jeff Caradona <jeffcaradona@gmail.com>",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "workspaces": [
    "app",
    "api",
    "mssql",
    "shared"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "npx concurrently --names api,app --prefix-colors blue,green \"npm run dev --workspace=api\" \"npm run dev --workspace=app\"",
    "dev:api": "npm run dev --workspace=api",
    "dev:app": "npm run dev --workspace=app",
    "dev:api:limited": "npm run dev:limited --workspace=api",
    "test": "node --test api/tests/**/*.test.js shared/tests/**/*.test.js",
    "test:smoke": "node --test api/tests/**/*.smoke.test.js",
    "test:integration": "node --test api/tests/**/*.integration.test.js --test-timeout=10000",
    "test:coverage": "c8 node --test api/tests/**/*.test.js shared/tests/**/*.test.js",
    "test:shared": "node --test shared/tests/**/*.test.js",
    "test:stress": "node stress-test-error-recovery.js",
    "stress-test": "node stress-test.js",
    "stress-test:light": "node stress-test.js --connections 5 --duration 60",
    "stress-test:heavy": "node stress-test.js --connections 50 --duration 60",
    "stress-test:buffered": "node stress-test-buffered.js",
    "stress-test:buffered:light": "node stress-test-buffered.js --connections 5 --duration 60",
    "stress-test:buffered:heavy": "node stress-test-buffered.js --connections 20 --duration 60"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "autocannon": "^8.0.0",
    "c8": "^10.1.3",
    "cross-env": "^10.1.0",
    "eslint": "^10.0.0",
    "eslint-plugin-n": "^17.23.2",
    "nodemon": "^3.1.11",
    "sinon": "^21.0.1"
  }
}
